<h2><%= @meme.title %></h2>
<img src = <%= @meme.image.large%>>
<p><%= @meme.body %></p>
<h2>Все комментарии</h2>
<% @meme.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %> </strong>: <%= comment.body%> </p>
  </div>
<% end %>
<hr>
<h2>Добавление комментария</h2>
<%= form_for([@meme, @meme.comments.build]) do |f| %>
  <p>
    Пользователь<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Текст комментария<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Добавить комментарий", {:class => 'btn btn-secondary'}) %>
  </p>
<% end %>