<h1><%= @meme.title %></h1>
<img src = <%= @meme.image.large%>>
<p><%= @meme.body %></p>
<hr>
<%= link_to "Редактировать мем", edit_meme_path(@meme), :class => 'btn btn-warning' %>
<%= link_to "Удалить мем", meme_path(@meme), method: :delete, data: {confirm: "Хотите удалить мем?"}, :class => 'btn btn-danger' %>
<hr>
<h3>Все комментарии</h3>
<% @meme.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %> </strong>: <%= comment.body%> </p>
  </div>
<% end %>
<hr>
<h3>Добавление комментария</h3>
<%= form_for([@meme, @meme.comments.build]) do |f| %>
  <p>
    Пользователь<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Текст комментария<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Добавить комментарий", {:class => 'btn btn-secondary'}) %>
  </p>
<% end %>